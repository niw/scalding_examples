<?xml version="1.0"?>
<assembly>
  <!-- An assembly generates a jar includes all runtime dependencies -->
  <id>libjars</id>
  <formats>
   <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <excludes>
        <!-- Exclude project classes -->
        <exclude>${project.groupId}:${project.artifactId}</exclude>
        <!-- Exclude hadoop itself -->
        <exclude>org.apache.hadoop:hadoop-core</exclude>
        <exclude>org.apache.hadoop:hadoop-client</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>