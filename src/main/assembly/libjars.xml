<?xml version="1.0"?>
<assembly>
  <!-- An assembly generates a jar includes all runtime dependencies -->
  <id>libjars</id>
  <formats>
   <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <excludes>
        <!--
          Hadoop dependencies are excluded by 'provided' scope.
          In addition, exclude project classes.
        -->
        <exclude>${project.groupId}:${project.artifactId}</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>